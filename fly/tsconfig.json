{
  "compilerOptions": {
    "lib": ["ESNext"],
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "baseUrl": "./src",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
  ],
  "exclude": [
    "src/**/*.test.ts",
    "node_modules/**/*"
  ]
}